@page
@model CustomersModel
@{
    ViewData["Title"] = "Customers";

}
<h1>@ViewData["Title"]</h1>

<h2>Index</h2>
<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerEntities[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerEntities[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.CustomerEntities)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => customer.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => customer.Name)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@customer.Id">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@customer.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
